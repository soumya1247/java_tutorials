#3rd Example Caching
FROM maven:3.8.6-openjdk-18-slim AS build
WORKDIR /home/app

#Does not change often.So present at top
COPY ./pom.xml /home/app/pom.xml
COPY ./src/main/java/com/springboot/dockerhelloworld/DockerHelloWorldApplication.java /home/app/src/main/java/com/springboot/dockerhelloworld/DockerHelloWorldApplication.java

RUN mvn -f /home/app/pom.xml clean package

COPY . /home/app
RUN mvn -f /home/app/pom.xml clean package

FROM openjdk:18.0-slim
EXPOSE 8080
COPY --from=build /home/app/target/*.jar app.jar
ENTRYPOINT [ "sh", "-c", "java -jar /app.jar" ]